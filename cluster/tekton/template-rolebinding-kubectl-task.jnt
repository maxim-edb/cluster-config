function(username) {
  apiVersion: 'rbac.authorization.k8s.io/v1',
  kind: 'ClusterRoleBinding',
  metadata: {
    name: 'allow-kubectl-in-tekton' + username + '-tools',
    namespace: username + '-tools',
  },
  roleRef: {
    apiGroup: 'rbac.authorization.k8s.io',
    kind: 'ClusterRole',
    name: 'allow-kubectl-in-tekton',
  },
  subjects: [
    {
      kind: 'ServiceAccount',
      name: 'pipeline',
      namespace: username + '-tools'
    },
  ],
}
